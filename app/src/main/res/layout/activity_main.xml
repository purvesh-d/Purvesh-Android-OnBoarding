<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.onboarding.viewmodel.ActivityMainViewModel" />
        <variable
            name="clickHandler"
            type="android.view.View.OnClickListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.activity.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_15sdp">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_203sdp"
                android:background="@drawable/ic_rectangle_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_36sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:text="@string/enforcement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/view"
                android:layout_marginBottom="@dimen/_29sdp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:text="@string/email_id"
                android:layout_marginTop="@dimen/_48sdp"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/view"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editEmail"
                style="@style/Widget.AppCompat.EditText.LoginText"
                android:layout_marginTop="@dimen/_3sdp"
                android:inputType="textEmailAddress"
                android:text="@={viewModel.txtEmail}"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toBottomOf="@id/txtEmail"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:text="@string/password"
                android:layout_marginTop="@dimen/_9sdp"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/editEmail"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editPassword"
                style="@style/Widget.AppCompat.EditText.LoginText"
                android:layout_marginTop="@dimen/_3sdp"
                android:inputType="textPassword"
                android:text="@={viewModel.txtppassword}"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toBottomOf="@id/txtPassword" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_show_password"
                android:background="@android:color/transparent"
                android:layout_marginRight="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="@id/editPassword"
                app:layout_constraintBottom_toBottomOf="@id/editPassword"
                app:layout_constraintEnd_toEndOf="@id/editPassword"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:button="@drawable/ic_icon_checkbox_normal"
                android:paddingLeft="@dimen/_3sdp"
                android:gravity="center_vertical"
                android:text="@string/remember_me"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/editPassword" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/forgot_password"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toBottomOf="@id/editPassword" />

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/btnLogin"
                style="@style/ProgressButton"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/login"
                android:clickable="true"
                android:onClick="@{clickHandler::onClick}"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toBottomOf="@id/txtForgotPassword"
                android:focusable="true" />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_38sdp"
                android:background="@color/light_gray"
                android:alpha="0.3"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/btnLogin"
                app:layout_constraintEnd_toStartOf="@id/txtOr"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="12.5sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="@string/or"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_30sdp"
                app:layout_constraintStart_toEndOf="@id/divider1"
                app:layout_constraintTop_toBottomOf="@id/btnLogin"
                app:layout_constraintEnd_toStartOf="@id/divider2"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_38sdp"
                android:background="@color/light_gray"
                android:alpha="0.3"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toBottomOf="@id/btnLogin"
                app:layout_constraintStart_toEndOf="@id/txtOr"/>

            <View
                android:id="@+id/faceBlock"
                android:layout_width="0dp"
                android:layout_height="@dimen/_132sdp"
                android:background="@drawable/face_background"
                android:layout_marginTop="@dimen/_26sdp"
                app:layout_constraintTop_toBottomOf="@id/txtOr"
                app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFace"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_57sdp"
                android:src="@drawable/ic_face_icon"
                android:layout_marginTop="@dimen/_19sdp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toTopOf="@id/faceBlock"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTapToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_login_with"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textStyle="normal"
                android:alpha="0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/imgFace"
                app:layout_constraintEnd_toStartOf="@id/txtFaceId"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFaceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/face_id"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintStart_toEndOf="@id/txtTapToLogin"
                app:layout_constraintTop_toBottomOf="@id/imgFace"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>